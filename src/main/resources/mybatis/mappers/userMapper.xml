<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dev.careers.UserRepository">
    <select id="findAll" resultType="com.dev.careers.domain.Curator">
        SELECT * FROM curators
    </select>

    <insert id="save" parameterType="com.dev.careers.domain.Curator" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO curators(id, name, password, email)
        VALUES(#{id}, #{name}, #{password}, #{email})
    </insert>

    <select id="isEmail" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM curators WHERE email = #{email}
    </select>
</mapper>